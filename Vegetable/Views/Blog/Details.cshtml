@model Blog
@{
    List<BlogComment> blogComment = ViewBag.blogComment;
    List<Blog> blogs = ViewBag.blog;
}


<section class="blog-details-hero set-bg" data-setbg="/img/blog/details/details-hero.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="blog__details__hero__text">
                    <h2>@Model.Title</h2>
                    <ul>
                        <li>By Michael Scofield</li>
                        <li>January 14, 2019</li>
                        <li>8 Comments</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Hero End -->
<!-- Blog Details Section Begin -->
<section class="blog-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-5 order-md-1 order-2">
                <div class="blog__sidebar">
                    <div class="blog__sidebar__search">
                        <form action="#">
                            <input type="text" placeholder="Search...">
                            <button type="submit"><span class="icon_search"></span></button>
                        </form>
                    </div>
                    <div class="blog__sidebar__item">
                        <h4>Categories</h4>
                        <ul>
                            <li><a href="#">All</a></li>
                            <li><a href="#">Beauty (20)</a></li>
                            <li><a href="#">Food (5)</a></li>
                            <li><a href="#">Life Style (9)</a></li>
                            <li><a href="#">Travel (10)</a></li>
                        </ul>
                    </div>
                    <div class="blog__sidebar__item">
                        <h4>Recent News</h4>
                        <div class="blog__sidebar__recent">
                          @foreach(var item in blogs.Take(3)){
                                <a href="#" class="blog__sidebar__recent__item">
                                    <div class="blog__sidebar__recent__item__pic">
                                        <img src="/img/blog/sidebar/sr-1.jpg" alt="">
                                    </div>
                                    <div class="blog__sidebar__recent__item__text">
                                        <h6>@item.Title</h6>
                                        <span>@item.CreatedAt</span>
                                    </div>
                                </a>
                          }
                        </div>
                    </div>
                    <div class="blog__sidebar__item">
                        <h4>Search By</h4>
                        <div class="blog__sidebar__item__tags">
                            <a href="#">Apple</a>
                            <a href="#">Beauty</a>
                            <a href="#">Vegetables</a>
                            <a href="#">Fruit</a>
                            <a href="#">Healthy Food</a>
                            <a href="#">Lifestyle</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-7 order-md-1 order-1">
                <div class="blog__details__text">
             
                    <img src="/img/blog/@Model.Image" alt="" class="d-block mx-auto img-fluid mb-4" style="max-width: 700; height: auto;">
                    <p class="lead" style="line-height: 1.8;">
                        @Model.Comment
                    </p>
                </div>

                <div class="container mt-5">
                    <!-- Blog Comments -->
                    <div class="blog-comment pt-4">
                        <h4 class="mb-4">@blogComment.Count() Bình luận</h4>
                        <div class="container my-5">
                            <div class="row">
                                <div class="card text-body">
                                    @foreach (var item in blogComment)
                                    {
                                        <div class="card-body p-2">
                                            <div class="d-flex flex-start">
                                                <img class="rounded-circle shadow-1-strong me-5"
                                                     src="~/img/BlogCmt/@item.Images" alt="avatar" width="60"
                                                     height="60" />
                                                <div class="ml-5">

                                                    <div class="d-flex align-items-center mb-3">
                                                        <h6 class="fw-bold mr-3">@item.CmtBlName</h6>
                                                        <p class="mb-0">
                                                            @item.CreatedAt
                                                        </p>  
                                                    </div>
                                                    <p class="mb-2">
                                                        @item.Detail
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <hr class="my-0" />
                                    }
                                </div>
                            </div>
                        </div>
                        
                    </div>

                    <!-- Feedback Form -->
                    <div class="feedback-area mt-5">
                        <h4 class="mb-3">Gửi bình luận</h4>
                        <form id="contact-form">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <input type="text" id="c_name" name="name" class="form-control" placeholder="Your Name*" required>
                                </div>
                                <div class="col-12 mt-3">
                                    <textarea name="message" id="c_message" class="form-control" rows="5" placeholder="Message" required></textarea>
                                </div>
                                <div class="col-12 mt-3">
                                    <button type="button" id="c_submit" class="btn btn-primary w-100">Gửi đi</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
<!-- Blog Details Section End -->
<!-- Related Blog Section Begin -->
<section class="related-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title related-blog-title">
                    <h2>Bài đăng bạn có thể thích</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach(var item in blogs.Take(3)){
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic">
                            <img src="/img/blog/@item.Image" alt="">
                        </div>
                        <div class="blog__item__text">
                            <ul>
                                <li><i class="fa fa-calendar-o"></i> @item.CreatedAt</li>
                                <li><i class="fa fa-comment-o"></i> @blogComment.Count() Đánh giá</li>
                            </ul>
                            <h5><a href="#">@item.Title</a></h5>
                            <p>@item.Comment</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Related Blog Section End -->
@section Scripts {
    <script>
        $(document).ready(function () {
                   $("#c_submit").click(function (event) {
            event.preventDefault();

            let _name = $("#c_name").val().trim();
            let _message = $("#c_message").val().trim();

            if (!_name || !_message) {
                toastr.error("Vui lòng điền đầy đủ thông tin!");
                return;
            }
            // Nếu tất cả trường đều hợp lệ, gửi AJAX
            $.ajax({
                url: "/Blog/Create",
                type: "POST",
                data: {
                    name: _name,
                    message: _message
                },
                success: function (result) {
                    if (result.status) {
                        $("#c_name").val("");  
                        $("#c_message").val("");
                        toastr.success("Gửi thành công!");
                    } else {
                        toastr.error("Gửi không thành công!");
                    }
                },
                error: function () {
                    toastr.error("Có lỗi xảy ra, vui lòng thử lại!");
                }
            });
        });

        });
    </script>
}