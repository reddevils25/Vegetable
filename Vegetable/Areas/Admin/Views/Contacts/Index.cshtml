@model IEnumerable<Vegetable.Models.Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="body-wrapper">
    <div class="row">
        <div class="col-12 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4">
                    <h5 class="card-title fw-semibold mb-4">Quản lí liên hệ</h5>
                    <div class="table-responsive">
                        <h3 class="card-title"><a asp-action="Create">Thêm mới</a></h3>
                        <table class="table text-nowrap mb-0 align-middle">
                            <thead class="text-dark fs-4">
                                <tr>
                                    <th>STT</th>
                                    <th>ContactID</th>
                                    <th>Tên người liên hệ</th>
                                    <th>Email</th>
                                    <th>SĐT</th>
                                    <th>Ghi chú</th>

                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(i++)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ContactId)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                        
                                        <td>@Html.DisplayFor(modelItem => item.EmailAddress)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                        <td>@Html.DisplayFor(modelItem => item.InquiryMessage)</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.ContactId" class="btn btn-primary">Sửa</a>
                                            <a asp-action="Delete" asp-route-id="@item.ContactId" class="btn btn-danger">Xóa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
