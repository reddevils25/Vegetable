@model Vegetable.Models.Contact

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<<div class="body-wrapper">
    <div class="card mb-0">
        <div class="card-body">
            <legend><b> Xóa liên hệ</b></legend>
            <form asp-action="Delete">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label for="exampleInputEmail">Họ và tên: </label>
                        @Html.DisplayFor(model => model.FullName)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Emails:  </label>
                        @Html.DisplayFor(model => model.EmailAddress)
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Ghi chú </label>
                        @Html.DisplayFor(model => model.InquiryMessage)
                    </div>
                   
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="ContactId" />
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow-lg border-0">
                                <i class="fas fa-trash-alt"></i> Xoá
                            </button>
                            <a asp-action="Index" class="btn btn-primary btn-lg rounded-pill shadow-lg border-0">
                                <i class="fas fa-undo"></i> Quay Lại
                            </a>
                        </div>
                        <p class="text-danger">Bạn có chắc chắn muốn xóa sản phẩm này? Hành động này không thể hoàn tác!</p>
                    </form>
                </div>
            </form>
        </div>
    </div>
</div>
