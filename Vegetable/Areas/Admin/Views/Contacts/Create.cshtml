@model Vegetable.Models.Contact

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="body-wrapper">
    <div class="card mb-0">
        <div class="card-body">
            <p><b>Thêm mới bài viết</b></p>
            <form asp-action="Create">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @* <div class="form-group mb-3"> *@
                    @*     <label asp-for="ContactId" class="control-label">ContactID</label> *@
                    @*     <input asp-for="ContactId" class="form-control" /> *@
                    @*     <span asp-validation-for="ContactId" class="text-danger"></span> *@
                    @* </div> *@
                    <div class="form-group mb-3">
                        <label asp-for="FullName" class="control-label">Họ và tên</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="EmailAddress" class="control-label">Emails</label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Phone" class="control-label">Số điện thoại</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    

                    <div class="form-group mb-3">
                        <label asp-for="InquiryMessage" class="control-label">Ghi chú</label>
                        <input asp-for="InquiryMessage" class="form-control" />
                        <span asp-validation-for="InquiryMessage" class="text-danger"></span>
                    </div>

                    
                    <div class="form-group mb-3">
                        <input type="submit" value="Thêm mới" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

