@model Vegetable.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="body-wrapper">
    <div class="card mb-0">
        <div class="card-body">
            <legend><b>Thêm sản phẩm</b></legend>
            <form asp-action="Create">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="ProductName" class="control-label">Tiêu đề</label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Alias" class="control-label">Alias</label>
                        <input asp-for="Alias" class="form-control" />
                        <span asp-validation-for="Alias" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="CategoryId" class="control-label">Danh mục</label>
                        <input asp-for="CategoryId" class="form-control" />
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ImageUrl" class="control-label">Ảnh</label>
                        <div class="input mb-3">
                            <div class="input-group-prepend">
                                <button type="button" class="btn btn-success" onclick="openDialog()">Chọn ảnh</button>
                            </div>

                            <input type="text" class="form-control" id="file_input" asp-for="ImageUrl" aria-describedby="button-addon2" />
                        </div>

                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label">Mô tả</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Price" class="control-label">Giá</label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="PriceSale" class="control-label">Giá giảm</label>
                        <input asp-for="PriceSale" class="form-control" />
                        <span asp-validation-for="PriceSale" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Weight" class="control-label">Trọng lượng</label>
                        <input asp-for="Weight" class="form-control" />
                        <span asp-validation-for="Weight" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Star" class="control-label">Sao</label>
                        <input asp-for="Star" class="form-control" />
                        <span asp-validation-for="Star" class="text-danger"></span>
                    </div>
                    <div class="form-group form check mb-3">
                        <label class="form-checked-input">
                            <input class="form-check-input" asp-for="IsNew" /> Hiện thị
                        </label>
                    </div>
                    <div class="form-group mb-3">
                        <input type="submit" value="Thêm mới" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
