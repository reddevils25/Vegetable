@model Vegetable.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="body-wrapper">
    <div class="card mb-0">
        <div class="card-body">
            <p class="h3 text-primary"><b>Thêm mới danh mục</b></p>
            <form asp-action="Create">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3 ">
                        <label asp-for="CategoryName" class="control-label">Tên danh mục</label>
                        <input asp-for="CategoryName" class="form-control border-primary" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3 ">
                        <label asp-for="CategoryId" class="control-label">CategoryId</label>
                        <input asp-for="CategoryId" class="form-control border-primary" />
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Title" class="control-label">Tiêu đề</label>
                        <input asp-for="Title" class="form-control border-primary" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label">Mô tả</label>
                        <input asp-for="Description" class="form-control border-primary" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ImageUrl" class="control-label">Chọn Ảnh</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <button type="button" class="btn btn-success" onclick="openDialog()">Choose a picture</button>
                            </div>
                            <input type="text" class="form-control" id="file_input" asp-for="ImageUrl" aria-describedby="button-addon2" />
                        </div>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group form check mb-3">
                        <label class="form-checked-input">
                            <input class="form-check-input" asp-for="IsActive" /> Hiển thị
                        </label>
                    </div>
                    <div class="form-group mb-3">
                        <input type="submit" value="Thêm mới" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

