@model Vegetable.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="body-wrapper">
    <div class="card mb-0">
        <div class="card-body">
            <legend><b> Xóa sản phẩm</b></legend>
            <form asp-action="Delete">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label for="exampleInputEmail">Tiêu đề: </label>
                        @Html.DisplayFor(model => model.CategoryName)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Tiêu đề: </label>
                        @Html.DisplayFor(model => model.Title)
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Mô tả: </label>
                        @Html.DisplayFor(model => model.Description)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1"></label>
                        <div class="text-center">
                            <img src="~/img/categories/@Model.ImageUrl" alt="Product Image" style="max-width: 100%; height: auto;" />
                        </div>
                    </div>
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="CategoryId" />
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow-lg border-0">
                                <i class="fas fa-trash-alt"></i> Xoá
                            </button>
                            <a asp-action="Index" class="btn btn-primary btn-lg rounded-pill shadow-lg border-0">
                                <i class="fas fa-undo"></i> Quay Lại
                            </a>
                        </div>
                        <p class="text-danger">Bạn có chắc chắn muốn xóa sản phẩm này? Hành động này không thể hoàn tác!</p>
                    </form>
                </div>
            </form>
        </div>
    </div>
</div>